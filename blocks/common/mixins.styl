arrow(image = '../../lib/images/arrow-right@2x.png')
  content: ''
  display: inline-block

  width: $arrowWidth
  height: @width
  margin-bottom: -.8rem

  background-repeat: no-repeat
  background-position: top center
  background-size: cover
  background-image: url(image)

section()
  margin: 0 auto
  padding: $pOffsetX
  max-width: $pMaxWidth
  min-width: $pMinWidth
  width: 100%

  box-sizing: border-box

  @media (max-width: $isMobile)
    &
      padding: $pMobileOffsetX

clearfix()
  &:before,
  &:after
    content: ''
    display: table

  &:after
    clear: both

goodsListButton()
  font-size: 1.6rem
  line-height: 4rem

  display: inline-block
  padding: 0 2rem

  cursor: pointer
  background: $cYellow

  transition: color .15s ease-out

  &:hover
    color: #5f5f5f

  @media (max-width: $isTablet)
    &
      width: 100%

      text-align: center
      box-sizing: border-box
