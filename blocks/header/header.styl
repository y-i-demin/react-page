.header
  section()

  padding: 4.8rem $pOffsetX

  background-repeat: no-repeat
  background-position: top center
  background-size: cover
  background-image: url('../../lib/images/header-bg.jpg')

  color: #fff

  user-select: none

  @media (max-width: $isMobile)
    &
      padding: $pMobileOffsetX

  &-title
    font-family: CirceExtraLight
    font-size: 6.6rem
    font-weight: 400
    line-height: 110%

    margin-top: 21.5rem

    @media (max-width: $isTablet)
      &
        font-size: 4rem
        line-height: 120%

  &-subtitle
    font-family: CirceExtraLight
    font-size: 3rem
    font-weight: 400
    line-height: 134%

    margin: 2rem 0 3.5rem
    color: #9b9b9b

    @media (max-width: $isTablet)
      &
        font-size: 2.4rem

  &-logo
    display: block
    width: 10.4rem
    height: 5.6rem

    float: left

    background-repeat: no-repeat
    background-position: top center
    background-image: url('../../lib/images/logo.svg')

  &-settings
    font-family: Circe
    font-size: 1.1rem
    line-height: 146%

    margin-top: .6rem
    float: right

    text-transform: uppercase

    @media (max-width: $isMobile)
      &
        display: none

    &-lang
      margin-right: 4rem
      cursor: pointer

      &::after
        arrow()
        transform: rotate(90deg)

    &-website
      color: $cYellow
      text-decoration: none
